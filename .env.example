# OpenAI Configuration (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional - for debugging and tracing)
# Get your API key from: https://smith.langchain.com/
# Leave empty or set ENABLE_TRACING=false to disable
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=rental-contract-rag
ENABLE_TRACING=false

# Application Configuration
# Port for the web application (default: 8050)
APP_PORT=8050

# Debug mode (set to true for development)
DEBUG_MODE=false

# Model Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Configuration
COLLECTION_NAME=rental_law_2025